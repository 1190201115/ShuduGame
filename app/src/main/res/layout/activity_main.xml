<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<ImageView
    android:id="@+id/background"
    android:scaleType="centerCrop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/background"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="多人数独"
            android:textColor="#00ffff"
            android:textSize="60dp" />
        <Button
            android:id="@+id/b_newGame"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/continueGame"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="新游戏"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/continueGame"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/endGame"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="继续游戏"
            android:textSize="20dp" />

        <Button
            android:id="@+id/endGame"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/readMe"
            android:layout_marginBottom="10dp"
            android:text="退出"
            android:textSize="20dp" />
        <Button
        android:id="@+id/readMe"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/friendsMode"
        android:text="设置/说明"
        android:textSize="20dp" />

        <Button
            android:id="@+id/friendsMode"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:text="多人模式"
            android:textSize="20dp" />

    </RelativeLayout>

</FrameLayout>